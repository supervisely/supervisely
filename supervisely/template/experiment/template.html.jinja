<div class="experiment-body">

    <sly-style>
        .experiment-body h1 {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 5px;
        }
        .experiment-body .sly-markdown-widget .markdown-body {
        padding: 0;
        font-family: inherit;
        }
        .experiment-body .sly-markdown-widget .markdown-body h2 {
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 0px;
        border: 0;
        }
        .experiment-body .sly-markdown-widget .markdown-body h3 {
        color: #949bab;
        font-size: 18px;
        margin-bottom: 7px;
        }
        .experiment-body .sly-markdown-widget .markdown-body p {
        margin-bottom: 12px;
        }

        .experiment-body .section {
        margin-bottom: 30px;
        scroll-margin-top: 20px;
        padding-top: 10px;
        }
        .experiment-body .overview-info-block {
        background: #f4f7fb;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        }
        .experiment-body .width-fit-content {
        width: fit-content;
        }
        .experiment-body .main-content {
        flex-grow: 1;
        }

        .experiment-body .buttons-container {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 20px;
        }

        .experiment-body table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        }
        .experiment-body table th,
        .experiment-body table td {
        border: 1px solid #e0e0e0;
        padding: 8px 12px;
        text-align: left;
        }
        .experiment-body table th {
        background-color: #f4f7fb;
        }
        .experiment-body .metrics-table,
        .experiment-body .checkpoints-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        border-radius: 6px;
        overflow: hidden;
        }
        .experiment-body .metrics-table th,
        .experiment-body .checkpoints-table th {
        background-color: #f4f7fb;
        font-weight: 600;
        color: #333;
        padding: 12px 15px;
        text-align: left;
        border-bottom: 2px solid #e0e0e0;
        }
        .experiment-body .metrics-table td,
        .experiment-body .checkpoints-table td {
        padding: 10px 15px;
        border-bottom: 1px solid #e9ecef;
        }
        .experiment-body .metrics-table tr:hover,
        .experiment-body .checkpoints-table tr:hover {
        background-color: #f8f9fa;
        }

        .experiment-body .links-list,
        .experiment-body .overview-list,
        .experiment-body .buttons-list {
        list-style-type: none;
        padding: 0;
        margin: 0 0 20px 0;
        }
        .experiment-body .links-list li,
        .experiment-body .overview-list li,
        .experiment-body .buttons-list li {
        margin-bottom: 8px;
        position: relative;
        padding-left: 8px;
        display: flex;
        align-items: flex-start;
        }
        .experiment-body .links-list li:before,
        .experiment-body .buttons-list li:before {
        content: "â€¢";
        color: #1890ff;
        display: inline-block;
        width: 15px;
        margin-right: 10px;
        }
        .experiment-body .overview-list li:before {
        content: "";
        display: none;
        }
        .experiment-body .link-icon,
        .experiment-body .button-icon {
        margin-right: 8px;
        }
        .experiment-body .overview-list .label {
        font-weight: 600;
        margin-right: 8px;
        min-width: 120px;
        display: inline-block;
        }

        /* Code */
        .experiment-body .code-block {
        background-color: #f5f5f5;
        border-radius: 6px;
        padding: 15px;
        margin-bottom: 20px;
        overflow-x: auto;
        }

        .experiment-body details {
        border-radius: 6px;
        overflow: hidden;
        margin-bottom: 20px;
        }
        .experiment-body details summary {
        padding: 12px 15px;
        background-color: #f4f7fb;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 600;
        transition: background-color 0.2s;
        }
        .experiment-body details summary:hover {
        background-color: #e6edf7;
        }
        .experiment-body details[open] summary {
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
        margin-bottom: 0;
        }

        html {
        scroll-behavior: smooth;
        }
    </sly-style>

    <!-- Sidebar navigation -->
    <sly-iw-sidebar
        :options="{ height: 'calc(100vh - 130px)', clearMainPanelPaddings: true, leftSided: false, disableResize: true, sidebarWidth: 300 }">
        <div slot="sidebar">
            {% autosidebar %}
        </div>

        <!-- Main content -->
        <div class="main-content markdown-body">
            {% include experiment.md.jinja %}
        </div>
    </sly-iw-sidebar>

</div>